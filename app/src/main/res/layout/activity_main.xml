<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F1FF"
    android:padding="16dp">

    <!-- Container for all rows -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:spacing="10dp">

            <!-- First row: pH and Temperature -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/tvPH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:text="pH: "
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:text="Temperature: "
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold" />
            </LinearLayout>

            <!-- Second row: Turbidity and ORP -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/tvTurbidity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:text="Turbidity: "
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvORP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:text="ORP: "
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold" />
            </LinearLayout>

            <!-- Third row: DO and EC -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/tvDO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:text="Dissolved Oxygen: "
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                android:background="@drawable/rounded_box"
                android:padding="8dp"
                android:text="Electric Conductivity: "
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:textStyle="bold" />
            </LinearLayout>

            <!-- Fourth row: TDS -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/tvTDS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_box"
                    android:padding="8dp"
                    android:text="Total Dissolved Solids: "
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
